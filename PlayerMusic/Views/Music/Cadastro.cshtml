@model MusicModel

<h2>Cadastro de Música</h2>

<form asp-action="Salvar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Autor">Autor</label>
        <input type="text" class="form-control" asp-for="Autor">
    </div>
    <div class="form-group">
        <label for="Genero">Gênero</label>
        <input type="text" class="form-control" asp-for="Genero">
    </div>
    <div class="form-group">
        <label for="AlbumImageFile">Imagem do Álbum</label>
        <input type="file" class="form-control" name="AlbumImageFile">
    </div>
    <div class="form-group">
        <label for="MusicaDiretorioFile">Arquivo do Diretório da Música</label>
        <input type="file" class="form-control" name="MusicaDiretorioFile">
    </div>
    <div class="form-group">
        <label for="NomeMusica">Nome da Música</label>
        <input type="text" class="form-control" asp-for="NomeMusica">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

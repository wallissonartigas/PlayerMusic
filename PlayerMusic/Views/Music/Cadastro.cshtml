@model MusicModel

<h2>Cadastro de Música</h2>

<form asp-action="Salvar">
    <div class="form-group">
        <label for="Autor">Autor</label>
        <input type="text" class="form-control" asp-for="Autor">
    </div>
    <div class="form-group">
        <label for="Genero">Gênero</label>
        <input type="text" class="form-control" asp-for="Genero">
    </div>
    <div class="form-group">
        <label for="AlbumDiretorio">Diretório do Álbum</label>
        <input type="text" class="form-control" asp-for="AlbumDiretorio">
    </div>
    <div class="form-group">
        <label for="MusicaDiretorio">Diretório da Música</label>
        <input type="text" class="form-control" asp-for="MusicaDiretorio">
    </div>
    <div class="form-group">
        <label for="NomeMusica">Nome da Música</label>
        <input type="text" class="form-control" asp-for="NomeMusica">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

